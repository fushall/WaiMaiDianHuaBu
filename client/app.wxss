/**app.wxss**/
@import 'style/weui.wxss';

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px 40px 25px 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
.weui-flex {
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
}
.weui-cells {
  margin-top:0;
  opacity:0;
  -webkit-transform:translateY(-50%);
  transform:translateY(-50%);
  -webkit-transition:.3s;
  transition:.3s;
}
.weui-cells:after, .weui-cells:before {
  display:none;
}
.weui-cells_show {
  opacity:1;
  -webkit-transform:translateY(0);
  transform:translateY(0);
}
.weui-cell:before { 
  right:15px;
}
.kind-list__item {
  margin:5px 0;
  background-color:#fff;
  border-radius:2px;
  overflow:hidden;
}
.kind-list__item:first-child {
  margin-top:0;
}
.kind-list__img {
  width:30px;
  height:30px;
}
.kind-list__item-hd {
  padding:10px 20px 10px 20px;
  -webkit-transition:opacity .3s;
  transition:opacity .3s;
}
.kind-list__item-hd_show {
  opacity:.4;
}
.kind-list__item-bd {
  height:0;
  overflow:hidden;
}
.kind-list__item-bd_show {
  height:auto;
}


.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
